<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magento_Backend::content_elements">
                        <resource id="Cream_AdvancedCms::advanced_page" title="Advanced Pages" sortOrder="10">
                            <resource id="Cream_AdvancedCms::save" title="Save Page" sortOrder="10" />
                            <resource id="Cream_AdvancedCms::page_delete" title="Delete Page" sortOrder="20" />
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Cream_AdvancedCms::advanced_config_cms" title="Advanced Content Management" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
